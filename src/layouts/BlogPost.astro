---
import Layout from "./Layout.astro";
import PostDate from "@components/ui/blog/PostDate.astro";
import PostTags from "@components/ui/blog/PostTags.astro";
import type { CollectionEntry } from "astro:content";
import Giscus from "@components/ui/Giscus.astro";

interface Props {
  post: CollectionEntry<"blog">;
}

const { post } = Astro.props;
const { title, date, tags, image } = post.data;
---

<Layout title={title}>
  <article class="max-w-210! w-full! text-wrap mx-auto px-6 md:px-8 mt-20">
    {
      image && (
        <img
          src={image}
          alt={title}
          class="w-full h-[400px] object-cover rounded-xl shadow-lg mb-8"
          loading="eager"
        />
      )
    }
    <header class="mb-10">
      <h1
        class="sm:text-4xl text-3xl lg:text-5xl font-bold mb-4 text-gray-900 dark:text-gray-100"
      >
        {title}
      </h1>
      <div class="mb-4">
        <PostDate date={date} />
      </div>
      {tags && <PostTags tags={tags} url_enabled={true} class="px-4 py-3 " />}
    </header>
    <div
      class="text-wrap prose max-w-none prose-lg md:prose-lg dark:prose-invert
       dark:prose-headings:text-gray-100
      prose-p:text-gray-700 dark:prose-p:text-gray-300
      prose-a:text-primary dark:prose-a:text-primary-400
      hover:prose-a:text-primary-500 dark:hover:prose-a:text-primary-300
      prose-strong:text-gray-900 dark:prose-strong:text-gray-100
      prose-code:text-gray-300 dark:prose-code:text-gray-400
      prose-blockquote:text-gray-700 dark:prose-blockquote:text-gray-300
      prose-span:text-gray-700 dark:prose-span:text-gray-300
      prose-li:text-gray-700 dark:prose-li:text-gray-300
      prose-img:rounded-xl prose-headings:text-primary-content prose-h1:text-base-content prose-h2:text-base-content prose-h3:text-accent-content
    prose-blockquote:w-20 prose-code:w-20"
    >
      <slot />
    </div>
    <Giscus />
  </article>
</Layout>
