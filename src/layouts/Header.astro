import ThemeSwitch from "@components/ui/ThemeSwitch.astro";
import Logo from "@components/ui/Logo.astro";

const nav_list = [
  { name: "Home", href: "/" },
  { name: "Blog", href: "/blog" },
  { name: "Projects", href: "/projects" },
  { name: "About", href: "/about" },
  { name: "Contact Me ðŸ‘‹", href: "/contact" },
