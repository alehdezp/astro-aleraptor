---
import { getCollection } from "astro:content";
import BlogPost from "@layouts/BlogPost.astro";
import Layout from "@layouts/Layout.astro";

// Force Astro to use SSR for this page since we're using a Deno adapter with server output
// export const prerender = false;

// Get the post data from the slug
const { slug } = Astro.params;
let post;
let Content;

try {
  // Get all blog posts
  const allPosts = await getCollection("blog");
  // Find the post with matching slug
  post = allPosts.find((p) => p.slug === slug);

  if (post) {
    // Only try to render if we found a post
    const rendered = await post.render();
    Content = rendered.Content;
  }
} catch (error) {
  console.error("Error loading blog post:", error);
}
---

{
  post && Content ? (
    <BlogPost post={post}>
      <Content />
    </BlogPost>
  ) : (
    <Layout title="Post Not Found">
      <div class="container mx-auto px-4 py-12 text-center">
        <h1 class="text-4xl font-bold mb-4">Post Not Found</h1>
        <p class="mb-8">
          The blog post you're looking for doesn't exist or couldn't be loaded.
        </p>
        <a href="/blog" class="btn btn-primary">
          Back to Blog
        </a>
      </div>
    </Layout>
  )
}
