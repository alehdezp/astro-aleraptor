---
const props = Astro.props;
import { Icon } from "astro-icon/components";
---

<li class="grid grid-cols-1">
  <div class="flex items-center justify-start space-x-5">
    <Icon
      name={props.icon}
      class="text-blue-500 w-10 h-10 min-w-12 min-h-12 bg-base-300 p-2 rounded-xl"
    />
    <div class="flex flex-col space-y-1">
      <h2 class="font-semibold">{props.field_name}</h2>
      <p>{props.value}</p>
    </div>
  </div>
  {props.divider && <div class="divider my-2 px-4" />}
</li>
