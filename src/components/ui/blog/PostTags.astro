---
import { Icon } from "astro-icon/components";
interface Props {
  tags: string[];
}

const { tags } = Astro.props;
---

<div class="flex flex-wrap gap-3 items-center">
  {
    tags.map((tag) => (
      <p class="rounded-full text-sm badge badge-soft badge-primary text-primary-content items-center">
        <Icon name="mdi:hashtag" class="inline-block w-3 h-3 text-primary" />
        {tag}
      </p>
    ))
  }
</div>
